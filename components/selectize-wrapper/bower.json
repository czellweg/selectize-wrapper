{
    "name": "selectize-wrapper",
    "version": "1.0",
    "authors": [
        "Christof Zellweger"
    ],
    "description": "Selectize wrapper using Polymer, forked and adjusted from Florian Roy's original implementation",
    "main": "element/*",
    "ignore": [
        "**/.*",
        "node_modules",
        "bower_components",
        "test",
        "tests"
    ],
    "keywords": ["Polymer", "web-components", "selectize", "html", "select", "selectbox"],
    "dependencies": {
        "polymer": "Polymer/polymer#^1.1.*",
        "iron-form" : "PolymerElements/iron-form#^1.0",
        "paper-input": "PolymerElements/paper-input#^1.0",
        "paper-icon-button": "PolymerElements/paper-icon-button#^1.0",
        "ugo-jquery-deps": "https://github.com/display-interactive/ugo-jquery-deps.git",
        "selectize": "latest",
        "underscore" : "underscore#^1.8"
    },
    "devDependencies": {
        "iron-component-page": "PolymerElements/iron-component-page#^1.0.0",
        "web-component-tester": "*"
    }
}
